<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Nombres de equipos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_team_local"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Equipo Local"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="start" />

        <TextView
            android:id="@+id/tv_team_visitor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Equipo Visitante"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="end" />
    </LinearLayout>

    <!-- Marcadores -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp">

        <TextView
            android:id="@+id/tv_score_local"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="36sp"
            android:textColor="@android:color/holo_blue_dark"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_score_visitor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="36sp"
            android:textColor="@android:color/holo_red_dark"
            android:gravity="center" />
    </LinearLayout>

    <!-- Botones de puntos para equipo local -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <Button
            android:id="@+id/btn_add1_local"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+1 Local" />

        <Button
            android:id="@+id/btn_add2_local"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+2 Local" />

        <Button
            android:id="@+id/btn_subtract1_local"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-1 Local" />
    </LinearLayout>

    <!-- Botones de puntos para equipo visitante -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <Button
            android:id="@+id/btn_add1_visitor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+1 Visitante" />

        <Button
            android:id="@+id/btn_add2_visitor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+2 Visitante" />

        <Button
            android:id="@+id/btn_subtract1_visitor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-1 Visitante" />
    </LinearLayout>

    <!-- Botones de reinicio y resultados -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reiniciar" />

        <Button
            android:id="@+id/btn_show_results"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Resultados" />
    </LinearLayout>
</LinearLayout>
